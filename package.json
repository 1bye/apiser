{
  "name": "apisr",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "publish:workspace": "node ./scripts/publish-workspace-package.mjs",
    "publish:workspace:dry-run": "node ./scripts/publish-workspace-package.mjs --dry-run"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.3",
    "typescript": "5.9.2",
    "ultracite": "7.2.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "zod": "^4.3.5",
      "type-fest": "^5.4.1"
    }
  }
}
